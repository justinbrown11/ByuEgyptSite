<!--Page to add record-->
@if (ViewData["Type"] == "add")
{
    ViewData["Title"] = "Add Burial Record";
}

else if (ViewData["Type"] == "edit")
{
    ViewData["Title"] = "Edit Burial Record";
}

else
{
    ViewData["Title"] = "";
}

@model ByuEgyptSite.Models.Burial

@if (ViewData["Type"] == "add")
{
    <h2 class="text-center">Add a new record</h2><br/>
}

else if (ViewData["Type"] == "edit")
{
    <h2 class="text-center">Edit a record</h2><br/>
}

<div class="container p-3 bg-light">
    <div class="d-flex justify-content-center text-center">
        @using (Html.BeginForm("AddEditRecord", "Researcher", FormMethod.Post))
            {
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger" asp-validation-summary="All"></div>
            }
                <div class="modal fade" id="confirm-add-modal" tabindex="-1" aria-labelledby="confirm-add-modal-title" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="confirm-add-modal-title">Confirm Record</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                Are you sure you want to make this change?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <input class="btn btn-warning" type="submit" value="Save" />
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model != null)
                {
                    @Html.HiddenFor(m => m.id)
                }
                

                <div class="form-group">
                    @Html.LabelFor(m => m.squarenorthsouth, "Square North South (Required)")
                @Html.TextBoxFor(m => m.squarenorthsouth, new { @class = "form-control", placeholder = "e.g. 190" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.northsouth, "North South (Required)")
                @Html.TextBoxFor(m => m.northsouth, new { @class = "form-control", placeholder = "e.g. N" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.squareeastwest, "Square East West (Required)")
                    @Html.TextBoxFor(m => m.squareeastwest, new { @class = "form-control", placeholder = "e.g. 20" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.eastwest, "East West (Required)")
                    @Html.TextBoxFor(m => m.eastwest, new { @class = "form-control", placeholder = "e.g. E" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.area, "Area (Required)")
                    @Html.TextBoxFor(m => m.area, new { @class = "form-control", placeholder = "e.g. SE" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.burialnumber, "Burial Number (Required)")
                    @Html.TextBoxFor(m => m.burialnumber, new { @class = "form-control", placeholder = "e.g. 20" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.headdirection, "Head Direction")
                    @Html.TextBoxFor(m => m.headdirection, new { @class = "form-control", placeholder = "e.g. W" })
                </div>

                <br />

                <div class="form-group">
                    @Html.LabelFor(m => m.sex, "Sex")
                    @Html.TextBoxFor(m => m.sex, new { @class = "form-control", placeholder = "M or F" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.depth, "Depth")
                    @Html.TextBoxFor(m => m.depth, new { @class = "form-control", placeholder = "e.g. 1.41" })
                </div>

                <br />

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.adultsubadult, "Adult Sub Adult")
                    @Html.TextBoxFor(m => m.adultsubadult, new { @class = "form-control", placeholder = "e.g. A" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.facebundles, "Face Bundles")
                    @Html.TextBoxFor(m => m.facebundles, new { @class = "form-control", placeholder = "e.g. Y" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.southtohead, "South to Head")
                    @Html.TextBoxFor(m => m.southtohead, new { @class = "form-control", placeholder = "e.g. 2.56" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.preservation, "Preservation")
                    @Html.TextBoxFor(m => m.preservation, new { @class = "form-control", placeholder = "e.g. well preserved" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.fieldbookpage, "Field Book Page")
                    @Html.TextBoxFor(m => m.fieldbookpage, new { @class = "form-control", placeholder = "e.g. 17" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.goods, "Goods")
                    @Html.TextBoxFor(m => m.goods, new { @class = "form-control", placeholder = "e.g. Y" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.text, "Text")
                    @Html.TextBoxFor(m => m.text, new { @class = "form-control", placeholder = "e.g. Textiles deteriorated" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.wrapping, "Wrapping")
                    @Html.TextBoxFor(m => m.wrapping, new { @class = "form-control", placeholder = "e.g. H" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.haircolor, "Hair Color")
                    @Html.TextBoxFor(m => m.haircolor, new { @class = "form-control", placeholder = "e.g. B" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.westtohead, "West to Head")
                    @Html.TextBoxFor(m => m.westtohead, new { @class = "form-control", placeholder = "e.g. 5" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.samplescollected, "Samples Collected")
                    @Html.TextBoxFor(m => m.samplescollected, new { @class = "form-control", placeholder = "e.g. true" })
                </div>

                <br />

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.burialid, "BurialId")
                    @Html.TextBoxFor(m => m.burialid, new { type = "number", @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.length, "Length")
                    @Html.TextBoxFor(m => m.length, new { @class = "form-control", placeholder = "e.g. 0.67" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.dataexpertinitials, "Data Expert Initials")
                    @Html.TextBoxFor(m => m.dataexpertinitials, new { @class = "form-control", placeholder = "e.g. JB" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.westtofeet, "West to Feet")
                    @Html.TextBoxFor(m => m.westtofeet, new { @class = "form-control", placeholder = "e.g. 0.35" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.ageatdeath, "Age at Death")
                    @Html.TextBoxFor(m => m.ageatdeath, new { @class = "form-control", placeholder = "e.g. A" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.southtofeet, "South to Feet")
                @Html.TextBoxFor(m => m.southtofeet, new { @class = "form-control", placeholder = "e.g. 4.34" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.excavationrecorder, "Excavation Recorder")
                    @Html.TextBoxFor(m => m.excavationrecorder, new { @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.photos, "Photos")
                    @Html.TextBoxFor(m => m.photos, new { @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.hair, "Hair")
                    @Html.TextBoxFor(m => m.hair, new { @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.burialmaterials, "Burial Materials")
                    @Html.TextBoxFor(m => m.burialmaterials, new { @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.dateofexcavation, "Date of Excavation")
                @Html.TextBoxFor(m => m.dateofexcavation, new { type = "date", @class = "form-control", placeholder = "" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.fieldbookexcavationyear, "Field Book Excavation Year")
                    @Html.TextBoxFor(m => m.fieldbookexcavationyear, new { @class = "form-control", placeholder = "e.g. 2022" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.clusternumber, "Cluster Number")
                    @Html.TextBoxFor(m => m.clusternumber, new { @class = "form-control", placeholder = "e.g. 8,9,10" })
                </div>

                <br />

                <div class="form-group">
                @Html.LabelFor(m => m.shaftnumber, "Shaft Number")
                    @Html.TextBoxFor(m => m.shaftnumber, new { @class = "form-control", placeholder = "" })
                </div>

                <br />

                <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#confirm-add-modal">Save Record</button>
            }
    </div>
</div>

